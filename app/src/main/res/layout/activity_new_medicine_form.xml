<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="smartcity.kni.wirtualnaapteczka.newMedicineForm">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/Add_medicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dodaj_lek_form"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/Name_of_medicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/nazwa_leku2" />

        <EditText
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/opis" />

        <TextView
            android:id="@+id/Description_of_medicine"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:text="@string/opis" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Label"
                android:layout_width="234dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/etykieta2" />

            <Spinner
                android:id="@+id/Choose_label"
                android:layout_width="231dp"
                android:layout_height="38dp"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/Add_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dodaj_now_etykiet" />

        <EditText
            android:id="@+id/Barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/kod_kreskowy2" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
