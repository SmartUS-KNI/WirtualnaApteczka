<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newwww"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_From_New_Medicine_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="smartcity.kni.wirtualnaapteczka.Main">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/add_Medicine_From_New_Medicine_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_medicine"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/name_Of_Medicine_From_New_Medicine_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/name_of_medicine" />

        <EditText
            android:id="@+id/description_Of_New_Medicine_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/description" />

        <TextView
            android:id="@+id/description_Of_Medicine_TextView"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:text="@string/description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_From_New_Medicine_TextView"
                android:layout_width="234dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/label" />

            <Spinner
                android:id="@+id/choose_Label_From_New_Medicine_Spinner"
                android:layout_width="231dp"
                android:layout_height="38dp"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/add_Label_From_New_Medicine_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_new_label" />

        <EditText
            android:id="@+id/barcode_From_New_Medicine_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/barcode" />

        <Button
            android:id="@+id/submit_From_New_Medicine_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="ZatwierdÅº" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
