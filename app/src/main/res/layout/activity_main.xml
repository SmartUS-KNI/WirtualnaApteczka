<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="smartcity.kni.wirtualnaapteczka.Main"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/Add_medicine"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:text="@string/dodaj_lek_main" />

        <Button
            android:id="@+id/Medicine_list"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:text="@string/lista_lekow_main" />

        <Button
            android:id="@+id/End_program"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:text="@string/zako_cz_program" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
